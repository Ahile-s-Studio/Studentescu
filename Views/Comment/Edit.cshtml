@model Studentescu.Models.Comment

@{
    ViewBag.Title = "Edit Comment";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    
    <div class="form-group">
        <label for="content" class="control-label">Edit Comment</label>
        <textarea id="content" name="content" class="form-control" rows="5">@Model.Content</textarea>
    </div>
    
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" asp-controller="Feed" class="btn btn-secondary">Cancel</a>
    </div>
</form>