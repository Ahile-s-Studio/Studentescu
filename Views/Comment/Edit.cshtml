@model Studentescu.Models.Comment

@{
    ViewBag.Title = "Edit Comment";
    Layout = "_Layout";
}

<h2 class="text-2xl font-semibold text-gray-200 mb-4 text-center mt-5">@ViewBag.Title</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Edit" method="post" class="max-w-3xl mx-auto p-6 bg-gray-900 rounded-lg shadow-xl border-2 border-purple-600 glow-border">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="content" class="control-label text-gray-300 mb-2">Edit Comment</label>
        <textarea id="content" name="content" class="form-control p-3 rounded-lg bg-gray-700 text-white border-2 border-gray-600 focus:ring-2 focus:ring-purple-600 resize-none w-full" rows="5">@Model.Content</textarea>
    </div>

    <div class="form-group mt-6 flex gap-4 justify-center">
        <button type="submit" class="w-full md:w-auto py-3 border-purple-600 border-2 text-white rounded-lg shadow-md hover:bg-purple-700 focus:ring-2 focus:ring-purple-500 transition-all glow-button ">Save Changes</button>
        <a asp-action="Index" asp-controller="Feed" class="w-full md:w-auto py-3 border-white border-2 text-white rounded-lg shadow-md hover:bg-gray-800 focus:ring-2 focus:ring-gray-500 transition-all glow-button text-center ">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .glow-button:hover {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-border {
        border: 2px solid rgba(168, 85, 247, 0.7);
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.4), 0 0 20px 5px rgba(168, 85, 247, 0.3);
    }

    h2 {
        text-align: center;
    }

    .form-group textarea {
        padding: 0.75rem;
        background-color: #2d3748;
        border: 1px solid #4a5568;
    }

    .form-group button, .form-group a {
        padding: 0.75rem 2rem;
    }
</style>
