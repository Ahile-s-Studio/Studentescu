@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure this matches your layout path
}

<div class="min-h-screen flex flex-col justify-center items-center bg-gray-900 text-gray-200 px-6">
    <h1 class="text-6xl font-bold text-purple-500 mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-6">Oops! Page Not Found</h2>
    <p class="text-gray-400 mb-8">
        The page you are looking for does not exist, or it might have been moved.
    </p>

    <a href="/" class="bg-purple-600 hover:bg-purple-700 text-white py-2 px-6 rounded-lg shadow-md 
    transition-transform transform hover:scale-105">
        Return to Home
    </a>
</div>
