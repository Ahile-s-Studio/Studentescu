@model Studentescu.Models.Post

@{
    ViewBag.Title = "Delete Post";
    Layout = "_Layout";
}

<h2 class="text-2xl font-semibold text-gray-200 mb-4 text-center mt-5">@ViewBag.Title</h2>

<div class="alert alert-warning p-4 mb-6 bg-red-500 text-white rounded-lg shadow-lg glow-alert max-w-3xl mx-auto">
    <strong>Warning!</strong> Deleting this post is permanent and cannot be undone.
</div>

<div class="bg-gray-800 p-6 rounded-lg shadow-xl glow-border mb-6 max-w-3xl mx-auto">
    <h4 class="text-lg text-gray-300">Post Title: @Model.Title</h4>
    <p class="text-gray-200">@Model.Content</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="max-w-3xl mx-auto p-6 bg-gray-900 rounded-lg shadow-xl border-2 border-purple-600 glow-border">
    <div class="flex gap-4">
        <button type="submit" class="w-full md:w-auto py-3 bg-red-500 text-white rounded-lg shadow-md hover:bg-red-600 focus:ring-2 focus:ring-red-500 transition-all glow-button">Delete</button>
        <a href="@Url.Action("Index", "Feed")" class="w-full md:w-auto py-3 border-white border-2  text-white rounded-lg shadow-md  hover:bg-gray-800 focus:ring-2 focus:ring-gray-500 transition-all glow-button text-center">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .glow-alert {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-button:hover {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-border {
        border: 2px solid rgba(168, 85, 247, 0.7);
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.4), 0 0 20px 5px rgba(168, 85, 247, 0.3);
    }

    .text-center {
        text-align: center;
    }

    a:hover {
        background-color: #4b5563;
    }
</style>
