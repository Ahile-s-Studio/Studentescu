@model Studentescu.Models.Post

@{
    ViewBag.Title = "Delete Post";
    Layout = "_Layout";
}

<h2>Are you sure you want to delete this post?</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Deleting this post is permanent and cannot be undone.
</div>

<div>
    <h4>Post Title: @Model.Title</h4>
    <p>@Model.Content</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Feed")" class="btn btn-secondary">Cancel</a>
</form>