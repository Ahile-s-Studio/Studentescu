@using System.Web
@model Studentescu.ViewModels.PaginatedList<ApplicationUser>

@{
    ViewBag.Title = "Profile Debug";
    Layout = "_Layout";
}

<h1 class="text-2xl font-bold text-center mt-6 mb-4">Search Results</h1>

@if (Model.Any())
{
    <ul class="list-disc pl-6 mb-6">
        @foreach (var user in Model)
        {
            <li class="mb-2">
                <a asp-controller="Profile"
                   asp-action="Show"
                   asp-route-username="@HttpUtility.UrlEncode(user.UserName)"
                   class="text-blue-600 hover:underline font-medium">
                    @user.UserName
                </a>
                <span class="text-gray-600">- @user.Email</span>
            </li>
        }
    </ul>

    <!-- Pagination Links -->
    <nav class="flex justify-center">
        <ul class="inline-flex items-center space-x-1">
            @if (Model.HasPreviousPage)
            {
                <li>
                    <a class="px-3 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 rounded"
                       asp-controller="Profile"
                       asp-action="Search"
                       asp-route-query="@ViewData["Query"]"
                       asp-route-page="@(Model.PageIndex - 1)">Previous</a>
                </li>
            }
            else
            {
                <li>
                    <span class="px-3 py-2 bg-gray-100 text-gray-400 rounded cursor-not-allowed">Previous</span>
                </li>
            }

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li>
                    <a class="px-3 py-2 rounded @(i == Model.PageIndex ? "bg-blue-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-gray-300")"
                       asp-controller="Profile"
                       asp-action="Search"
                       asp-route-query="@ViewData["Query"]"
                       asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li>
                    <a class="px-3 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 rounded"
                       asp-controller="Profile"
                       asp-action="Search"
                       asp-route-query="@ViewData["Query"]"
                       asp-route-page="@(Model.PageIndex + 1)">Next</a>
                </li>
            }
            else
            {
                <li>
                    <span class="px-3 py-2 bg-gray-100 text-gray-400 rounded cursor-not-allowed">Next</span>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <p class="text-center text-gray-500">No results found.</p>
}
