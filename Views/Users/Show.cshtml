@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Studentescu.ViewModels.UsersShowViewModel

<div class="container mx-auto p-4">
    <div class="card mt-3 bg-gray-800 rounded-lg shadow-lg border-2 border-purple-600 glow-border"
         style="height:100%; width: 100%;">
        <div class="card-body flex flex-col justify-between p-6">
            <div>
                <p class="text-white"><i class="bi bi-person"></i> Username: @Model.User.UserName
                </p>
                <p class="text-white"><i class="bi bi-envelope"></i> Email: @Model.User.Email</p>

                @if (Model.Roles.Count > 0)
                {
                    <p class="text-white"><i class="bi bi-person"></i> User Roles:</p>
                    <div class="flex flex-wrap">
                        @foreach (var role in Model.Roles)
                        {
                            <span
                                class="rounded-full bg-purple-600 text-white px-4 py-2 mr-2 mb-2">@role</span>
                        }
                    </div>
                }
            </div>

            @if ((string)Model.User.Id != Model.UserCurent.Id)
            {
                <div class="mt-4">
                    <form asp-controller="Users" asp-action="Delete" method="post"
                          asp-route-id="@Model.User.Id">
                        <button type="submit"
                                class="w-full py-3 bg-red-500 text-white rounded-lg shadow-md hover:bg-red-600 focus:ring-2 focus:ring-red-500 transition-all glow-button">
                            Delete User
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .glow-button:hover {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-border {
        border: 2px solid rgba(168, 85, 247, 0.7);
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.4), 0 0 20px 5px rgba(168, 85, 247, 0.3);
    }

    .rounded-full {
        border-radius: 9999px;
    }
</style>
