@model Studentescu.ViewModels.UsersViewModel

@{
    ViewBag.Title = "Profile Debug";
    Layout = "_Layout";
}

<div class="container mx-auto p-4">
    <div class="flex flex-wrap justify-center gap-8">
        @foreach (var user in Model.Users)
        {
            <div class="w-full md:w-1/3 lg:w-2/6 mb-6">
                <div
                    class="bg-gray-800 p-6 rounded-lg shadow-lg flex flex-col border-2 border-purple-600 glow-border">
                    <div class="space-y-4">
                        <p class="text-white"><i class="bi bi-person"></i> Username: @user.UserName
                        </p>
                        <p class="text-white"><i class="bi bi-envelope"></i> Email: @user.Email</p>

                        @if (user.FirstName != null)
                        {
                            <p class="text-white"><i class="bi bi-person"></i> First
                                Name: @user.FirstName</p>
                        }

                        @if (user.LastName != null)
                        {
                            <p class="text-white"><i class="bi bi-person"></i> Last
                                Name: @user.LastName</p>
                        }

                        @if (user.PhoneNumber != null)
                        {
                            <p class="text-white"><i class="bi bi-phone"></i> Phone
                                Number: @user.PhoneNumber</p>
                        }
                    </div>

                    <div class="flex space-x-4 mt-4">
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                           class="px-4 py-2 bg-purple-500 text-white rounded-md hover:bg-purple-600 transition-all glow-button">Edit</a>
                        <a asp-controller="Users" asp-action="Show" asp-route-id="@user.Id"
                           class="px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-all glow-button">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .glow-button:hover {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-border {
        border: 2px solid rgba(168, 85, 247, 0.7);
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.4), 0 0 20px 5px rgba(168, 85, 247, 0.3);
    }
</style>
