@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-2xl font-semibold text-center text-gray-300 my-6">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post"
              class="space-y-6 mt-6 max-w-3xl mx-auto p-6 bg-gray-900 rounded-lg 
              border-2 border-purple-600 glow-border backdrop-blur-lg">

            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500" role="alert"></div>

            <div class="mb-4">
                <label asp-for="Username" class="block text-lg text-gray-300">Username</label>
                <input asp-for="Username"
                       class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                       disabled />
                <span asp-validation-for="Username" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.FirstName" class="block text-lg text-gray-300">First
                    Name</label>
                <input asp-for="Input.FirstName"
                       class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" />
                <span asp-validation-for="Input.FirstName" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.LastName" class="block text-lg text-gray-300">Last
                    Name</label>
                <input asp-for="Input.LastName"
                       class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" />
                <span asp-validation-for="Input.LastName" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.Biography"
                       class="block text-lg text-gray-300">Biography</label>
                <textarea asp-for="Input.Biography"
                          class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                          rows="6" placeholder="Please enter your biography"></textarea>
                <span asp-validation-for="Input.Biography" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <div class="flex items-center space-x-3">
                    <input type="checkbox" asp-for="Input.IsProfilePrivate"
                           class="form-checkbox h-5 w-5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                           id="isProfilePrivateSwitch" aria-label="Toggle profile privacy" />
                    <label for="isProfilePrivateSwitch" class="text-lg text-gray-300 font-semibold">Make
                        Profile Public?</label>
                </div>
                <span asp-validation-for="Input.IsProfilePrivate"
                      class="text-sm text-red-500"></span>
            </div>

            <div class="mt-6">
                <button type="submit"
                        class="w-full py-2 px-4 bg-purple-600 text-white rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
