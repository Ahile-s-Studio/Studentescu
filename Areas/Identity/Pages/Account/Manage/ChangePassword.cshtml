@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-3xl font-bold text-center text-purple-600 mb-6">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container mx-auto p-6">
    <div class="max-w-3xl mx-auto bg-gray-900 p-8 rounded-lg shadow-xl">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 mb-4"
                 role="alert"></div>

            <div class="mb-6">
                <label asp-for="Input.OldPassword" class="block text-lg text-gray-300">Old
                    Password</label>
                <input asp-for="Input.OldPassword"
                       class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                       autocomplete="current-password" aria-required="true"
                       placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.NewPassword" class="block text-lg text-gray-300">New
                    Password</label>
                <input asp-for="Input.NewPassword"
                       class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                       autocomplete="new-password" aria-required="true"
                       placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.ConfirmPassword" class="block text-lg text-gray-300">Confirm
                    New
                    Password</label>
                <input asp-for="Input.ConfirmPassword"
                       class="w-full px-4 py-2 mt-2 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                       autocomplete="new-password" aria-required="true"
                       placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword"
                      class="text-sm text-red-500"></span>
            </div>

            <button type="submit"
                    class="w-full py-2 px-4 bg-purple-600 text-white rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500">
                Update Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
