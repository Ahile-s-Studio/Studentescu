@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<div class="w-1/4 bg-gray-800 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-white mb-6">Account Settings</h2>
    <ul class="space-y-4">
        <li>
            <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext) text-gray-300 hover:text-purple-600 transition-colors"
               id="profile" asp-page="./Index">Profile</a></li>
        <li>
            <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext) text-gray-300 hover:text-purple-600 transition-colors"
               id="email" asp-page="./Email">Email</a></li>
        <li>
            <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext) text-gray-300 hover:text-purple-600 transition-colors"
               id="change-password" asp-page="./ChangePassword">Password</a></li>
        @if (hasExternalLogins)
        {
            <li>
                <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext) text-gray-300 hover:text-purple-600 transition-colors"
                   id="external-login" asp-page="./ExternalLogins">External logins</a></li>
        }
        @* <li> *@
        @*     <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) text-gray-300 hover:text-purple-600 transition-colors" *@
        @*        id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a> *@
        @* </li> *@
        <li>
            <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext) text-gray-300 hover:text-purple-600 transition-colors"
               id="personal-data" asp-page="./PersonalData">Personal data</a></li>
    </ul>
</div>
