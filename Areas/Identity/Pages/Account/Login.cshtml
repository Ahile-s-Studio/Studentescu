@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center text-4xl font-bold text-purple-600 mt-8">@ViewData["Title"]</h1>

<div class="flex flex-col justify-center items-center mt-12">
    <div class="w-1/2  bg-gray-800 text-white rounded-lg p-8 shadow-lg">
        <form id="account" method="post" class="space-y-6">
            <h2 class="text-center text-xl font-semibold text-gray-200">Use a local account to
                log in</h2>
            <hr class="border-gray-600" />

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"
                 role="alert"></div>

            <!-- Email -->
            <div class="space-y-1">
                <label asp-for="Input.Email" class="block text-sm font-medium">Email</label>
                <input asp-for="Input.Email"
                       class="w-full p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                       autocomplete="username" aria-required="true"
                       placeholder="name@example.com" required />
                <span asp-validation-for="Input.Email" class="text-red-400 text-xs"></span>
            </div>

            <!-- Password -->
            <div class="space-y-1">
                <label asp-for="Input.Password"
                       class="block text-sm font-medium">Password</label>
                <input asp-for="Input.Password" type="password"
                       class="w-full p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                       autocomplete="current-password" aria-required="true"
                       placeholder="password" required />
                <span asp-validation-for="Input.Password" class="text-red-400 text-xs"></span>
            </div>

            <!-- Remember Me -->
            <div class="flex items-center space-x-2">
                <input asp-for="Input.RememberMe" type="checkbox"
                       class="w-4 h-4 text-purple-600 border-gray-500 focus:ring-purple-500 rounded" />
                <label asp-for="Input.RememberMe" class="text-sm">Remember Me</label>
            </div>

            <!-- Submit Button -->
            <div>
                <button id="login-submit" type="submit"
                        class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-md focus:ring-4 focus:ring-purple-400 focus:outline-none">
                    Log in
                </button>
            </div>

            <!-- Additional Links -->
            <div class="text-center text-sm space-y-2">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword"
                       class="text-purple-400 hover:underline">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                       class="text-purple-400 hover:underline">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"
                       class="text-purple-400 hover:underline">Resend email confirmation</a>
                </p>
            </div>
        </form>
    </div>

