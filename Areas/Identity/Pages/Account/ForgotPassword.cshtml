@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1 class="text-3xl font-semibold text-center text-gray-100 my-6">@ViewData["Title"]</h1>
<h2 class="text-xl text-center text-gray-300 mb-8">Enter your email.</h2>
<hr class="border-gray-500 mb-6" />

<div class="flex justify-center">
    <div
        class="max-w-sm w-full bg-gray-900 p-6 rounded-lg shadow-xl border-2 border-purple-600 glow-border">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>

            <div class="mb-4">
                <label for="email" class="block text-lg font-medium text-gray-300 mb-4">Email
                    Address</label>
                <input asp-for="Input.Email" type="email" id="email"
                       class="w-full p-3 bg-gray-800 text-gray-200 rounded-lg shadow-md border border-gray-700 focus:outline-none focus:ring-2 focus:ring-purple-500 transition-all glow-input"
                       placeholder="name@example.com" aria-required="true" />
                <span asp-validation-for="Input.Email"
                      class="text-red-500 text-sm mt-2 block"></span>
            </div>

            <button type="submit"
                    class="w-full py-3 bg-purple-500 text-white rounded-lg shadow-md hover:bg-purple-600 focus:ring-2 focus:ring-purple-500 transition-all glow-button">
                Reset Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .glow-input:focus {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-button:hover {
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.6), 0 0 20px 5px rgba(168, 85, 247, 0.4);
    }

    .glow-border {
        border: 2px solid rgba(168, 85, 247, 0.7);
        box-shadow: 0 0 10px 2px rgba(168, 85, 247, 0.4), 0 0 20px 5px rgba(168, 85, 247, 0.3);
    }
</style>
