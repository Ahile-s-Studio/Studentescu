@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center text-4xl font-bold text-purple-600 mt-8">@ViewData["Title"]</h1>

<div class="flex flex-col justify-center items-center mt-12">
    <!-- Registration Form -->
    <div class="w-1/2 bg-gray-800 rounded-lg p-8 shadow-xl">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
              class="space-y-6">
            <h2 class="text-xl font-semibold text-white text-center">Create a new account</h2>
            <hr class="border-gray-600 my-4" />

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

            <!-- Username -->
            <div class="space-y-1">
                <label asp-for="Input.UserName" class="block text-sm font-medium">Email</label>
                <input asp-for="Input.UserName"
                       class="w-full p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                       autocomplete="username" aria-required="true"
                       placeholder="name@example.com" required />
                <span asp-validation-for="Input.UserName" class="text-red-400 text-xs"></span>
            </div>

            <!-- Email -->
            <div class="space-y-1">
                <label asp-for="Input.Email" class="block text-sm font-medium">Email</label>
                <input asp-for="Input.Email"
                       class="w-full p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                       autocomplete="username" aria-required="true"
                       placeholder="name@example.com" required />
                <span asp-validation-for="Input.Email" class="text-red-400 text-xs"></span>
            </div>

            <!-- Password -->
            <!-- Password -->
            <div class="space-y-1">
                <label asp-for="Input.Password"
                       class="block text-sm font-medium">Password</label>
                <input asp-for="Input.Password" type="password"
                       class="w-full p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                       autocomplete="current-password" aria-required="true"
                       placeholder="password" required />
                <span asp-validation-for="Input.Password" class="text-red-400 text-xs"></span>
            </div>

            <!-- Confirm Password -->
            <div class="space-y-1">
                <label asp-for="Input.ConfirmPassword"
                       class="block text-sm font-medium">Password</label>
                <input asp-for="Input.ConfirmPassword" type="password"
                       class="w-full p-3 rounded-md bg-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:outline-none"
                       autocomplete="current-password" aria-required="true"
                       placeholder="password" required />
                <span asp-validation-for="Input.ConfirmPassword"
                      class="text-red-400 text-xs"></span>
            </div>

            <!-- Submit Button -->
            <button id="registerSubmit" type="submit"
                    class="w-full py-3 bg-purple-600 text-white font-semibold rounded-md hover:bg-purple-700 transition">
                Register
            </button>
        </form>
    </div>
</div>
